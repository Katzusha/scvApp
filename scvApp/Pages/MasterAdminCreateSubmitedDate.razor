        <form>
            <input type="date" placeholder="Date" class="textbox" @bind="Date"><br>
            <input type="time" placeholder="Hour" class="textbox" @bind="Time"><br>
            <input type="number" placeholder="Max number of students" class="textbox" @bind="MaxNumberOfStudents"><br>
            <button type="button" formaction="/Master/Submited-dates" class="login-button">Create</button>
        </form>
    </div>
</div>

@code 
{
    public DateOnly Date;
    public TimeOnly Time;
    public int MaxNumberOfStudents;
}